<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/jee  http://www.springframework.org/schema/jee/spring-jee.xsd
"
       xmlns:jee="http://www.springframework.org/schema/jee">

    <bean id="datasource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <!-- TODO: здесь захардкодены реквизиты СУБД. Нужно будет потом вынести в ресурсы -->
        <property name="driverClassName">
            <value>org.postgresql.Driver</value>
        </property>
        <property name="url">
            <value>jdbc:postgresql://127.0.0.1:5432/lor</value>
        </property>
        <property name="username">
            <value>maxcom</value>
        </property>
        <property name="password">
            <value>maxcom</value>
        </property>
    </bean>

    <bean class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate" id="jdbcTemplate">
        <constructor-arg ref="datasource"/>
    </bean>

    <bean class="ru.org.linux.dao.GalleryDao" id="galleryDao"/>
    <bean class="ru.org.linux.dao.PollDao" id="pollDao"/>
    <bean class="ru.org.linux.dao.IgnoreListDao" id="ignoreListDao"/>
    <bean class="ru.org.linux.dao.UserDao" id="userDao"/>
    <bean class="ru.org.linux.dao.ArchiveDao" id="archiveDao"/>
    <bean class="ru.org.linux.dao.SectionDao" id="sectionDao"/>
    <bean class="ru.org.linux.dao.GroupDao" id="groupDao"/>
    <bean class="ru.org.linux.dao.TagCloudDao" id="tagCloudDao"/>
    <bean class="ru.org.linux.dao.UserAgentDao" id="userAgentDao"/>
    <bean class="ru.org.linux.dao.MessageDao" id="messageDao"/>
    <bean class="ru.org.linux.dao.UserEventsDao" id="userEventsDao"/>
    <bean class="ru.org.linux.dao.IPBlockDao" id="iPBlockDao"/>
    <bean class="ru.org.linux.dao.DeleteInfoDao" id="deleteInfoDao"/>
    <bean class="ru.org.linux.dao.FavoritesDao" id="memoriesDao"/>
    <!-- <bean class="ru.org.linux.dao.CommentDao" id="commentDao"/> -->

</beans>
