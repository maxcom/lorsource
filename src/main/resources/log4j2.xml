<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <RollingFile name="A1"
                 fileName="${sys:catalina.base}/logs/lor-new.log"
                 filePattern="${sys:catalina.base}/logs/lor-new.log.%i.gz"
                 ignoreExceptions="false">
      <PatternLayout>
        <Pattern>%d %-4r [%t] %-5p %c %x - %m%n</Pattern>
      </PatternLayout>
      <SizeBasedTriggeringPolicy size="100 MB"/>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>

    <RollingFile name="A2"
                 fileName="${sys:catalina.base}/logs/lor-debug-new.log"
                 filePattern="${sys:catalina.base}/logs/lor-debug-new.log.%i.gz"
                 ignoreExceptions="false">
      <PatternLayout>
        <Pattern>%d %-4r [%t] %-5p %c %x - %m%n</Pattern>
      </PatternLayout>
      <SizeBasedTriggeringPolicy size="100 MB"/>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>

  </Appenders>

  <Loggers>
    <Logger name="org.apache.commons" level="info"/>
    <Logger name="org.springframework" level="info"/>
    <Logger name="org.apache.http" level="info"/>
    <Logger name="org.elasticsearch" level="info"/>
    <Logger name="org.apache.commons.jexl2.JexlEngine" level="error"/>
    <Logger name="play" level="info"/>
    <Logger name="com.sksamuel.elastic4s" level="info"/>
    <Logger name="ru.org.linux.auth.GenerationBasedTokenRememberMeServices" level="debug"/>
    <Logger name="org.springframework.web.socket.server.support.DefaultHandshakeHandler" level="off"/>

    <Root level="debug">
      <AppenderRef ref="A1" level="INFO"/>
      <AppenderRef ref="A2"/>
    </Root>
  </Loggers>
</Configuration>
