                                <include>${project.build.directory}/${project.build.finalName}/white/style.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/white/idea.css</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
