    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <warSourceExcludes>**/*.css,**/*.js</warSourceExcludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <version>1.2</version>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <nosuffix>true</nosuffix>
                    <jswarn>false</jswarn>
                    <aggregations>
                        <aggregation>
                            <removeIncluded>true</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/js/head.js</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.form.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.hotkeys-0.7.9.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.validate.pack.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.validate.ru.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/stylesheetToggle.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/highlight.pack.js</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>true</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/tango/combined.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/tango/syntax.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/tango/reset-fonts-grids.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/tango/style.css</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>true</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/black/combined.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/black/style.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/black/ir_black.css</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/white/combined.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/white/style.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/white/idea.css</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/white2/combined.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/white2/style.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/white/idea.css</include>
                            </includes>
                        </aggregation>
                    </aggregations>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>7.5.1.v20110908</version>
                <configuration>
                    <stopKey>foo</stopKey>
                    <stopPort>9999</stopPort>

                    <webAppConfig>
                        <jettyEnvXml>${project.build.directory}/test-classes/jetty-env.xml</jettyEnvXml>
                    </webAppConfig>

                    <webAppSourceDirectory>${project.build.directory}/${project.build.finalName}</webAppSourceDirectory>

                    <contextHandlers>
                        <contextHandler implementation="org.eclipse.jetty.webapp.WebAppContext">
                            <war>${project.build.directory}/test-wars/solr.war</war>
                            <contextPath>/solr</contextPath>
                        </contextHandler>

                        <contextHandler implementation="org.eclipse.jetty.webapp.WebAppContext">
                            <war>${project.build.directory}/test-wars/wiki.war</war>
                            <contextPath>/wiki</contextPath>
                            <extraClasspath>${project.build.directory}/test-classes;${project.build.directory}/test-wars/postgresql.jar</extraClasspath>
                        </contextHandler>
                    </contextHandlers>

                    <useTestClasspath>true</useTestClasspath>
                    <systemProperties>
                        <systemProperty>
                            <name>java.net.preferIPv4Stack</name>
                            <value>true</value>
                        </systemProperty>
                        <systemProperty>
                            <name>solr.solr.home</name>
                            <value>target/test-classes/solr</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-temp-storage</id>
                        <phase>generate-test-resources</phase>
                        <configuration>
                            <tasks>
                                <mkdir dir="${project.build.directory}/tmp/linux-storage/profile"/>
                                <mkdir dir="${project.build.directory}/tmp/linux-storage/tmp"/>
                                <mkdir dir="${project.build.directory}/tmp/jamwiki/upload"/>
				<mkdir dir="${project.build.directory}/${project.build.finalName}/gallery"/>
				<mkdir dir="${project.build.directory}/${project.build.finalName}/gallery/preview"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.solr</groupId>
                                    <artifactId>solr</artifactId>
                                    <version>3.4.0</version>
                                    <type>war</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/test-wars</outputDirectory>
                                    <destFileName>solr.war</destFileName>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.jamwiki</groupId>
                                    <artifactId>jamwiki-war</artifactId>
                                    <version>1.1.3</version>
                                    <type>war</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/test-wars</outputDirectory>
                                    <destFileName>wiki.war</destFileName>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>postgresql</groupId>
                                    <artifactId>postgresql</artifactId>
                                    <version>8.4-702.jdbc4</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/test-wars</outputDirectory>
                                    <destFileName>postgresql.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <!-- Separates the unit tests from the integration tests. -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!-- Skip the default running of this plug-in (or everything is run twice...see below) -->
                    <skip>true</skip>
                    <!-- Show 100% of the lines from the stack trace (doesn't work) -->
                    <trimStackTrace>false</trimStackTrace>
                </configuration>
                <executions>
                    <execution>
                        <id>unit-tests</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <!-- Never skip running the tests when the test phase is invoked -->
                            <skip>false</skip>
                            <includes>
                                <!-- Include unit tests within integration-test phase. -->
                                <include>**/*Test.java</include>
                            </includes>
                            <excludes>
                                <!-- Exclude integration tests within (unit) test phase. -->
                                <exclude>**/*IntegrationTest.java</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>integration-tests</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <!-- Never skip running the tests when the integration-test phase is invoked -->
                            <skip>false</skip>
                            <includes>
                                <!-- Include integration tests within integration-test phase. -->
                                <include>**/*IntegrationTest.java</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

          <plugin>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-maven-plugin</artifactId>
            <version>2.0.1</version>

            <configuration>
              <propertyFile>sql/liquibase.config</propertyFile>
              <verbose>true</verbose>
            </configuration>
            <executions>
              <execution>
                <phase>process-resources</phase>
                <goals>
                  <goal>update</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>production</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>
                            <propertyFile>sql/production-liquibase.config</propertyFile>
                            <verbose>false</verbose>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
