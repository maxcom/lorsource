            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.3</version>
            <configuration>
              <source>1.8</source>
              <target>1.8</target>
              <compilerArgument>-Xlint:deprecation</compilerArgument>
              <compilerArgument>-Xlint:unchecked</compilerArgument>
            </configuration>
          </plugin>

          <plugin>
            <groupId>org.jasig.maven</groupId>
            <artifactId>sass-maven-plugin</artifactId>
            <version>1.1.1</version>
            <executions>
              <execution>
                <goals>
                  <goal>update-stylesheets</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
		<sassOptions>
			<unix_newlines>true</unix_newlines>
			<cache>true</cache>
			<always_update>true</always_update>
			<cache_location>'${project.build.directory}/sass_cache'</cache_location>
			<style>:compressed</style>
		</sassOptions>
              <resources>
                <resource>
                  <source>
                    <directory>${basedir}/src/main/webapp/sass</directory>
                    <includes>
                      <include>**/scss</include>
                    </includes>
                  </source>
                  <destination>${project.build.directory}/${project.build.finalName}</destination>
                  <relativeOutputDirectory>..</relativeOutputDirectory>
                </resource>
              </resources>
            </configuration>
          </plugin>

          <plugin>
                <groupId>net.alchim31.maven</groupId>
                <version>1.3.3</version>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <nosuffix>true</nosuffix>
                    <jswarn>false</jswarn>
                    <encoding>utf-8</encoding>
                    <aggregations>
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/js/diff_match_patch.js</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/js/META-INF/resources/webjars/google-diff-match-patch/20121119-1/diff_match_patch_uncompressed.js</include>
                            </includes>
                        </aggregation>

                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/js/plugins.js</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/js/META-INF/resources/webjars/jquery-form/${jquery.form.version}/jquery.form.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.hotkeys.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/META-INF/resources/webjars/jquery-validation/${jquery.validation.version}/jquery.validate.min.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.validate.ru.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.popover-1.1.2.js</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/tango/combined.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/tango/syntax.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/tango/main.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/tango/popover.css</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/qrerror/combined.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/tango/main.css</include>
                            </includes>
                        </aggregation>
                      <aggregation>
