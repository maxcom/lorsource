    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <warSourceExcludes>**/*.css,**/*.js</warSourceExcludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <version>1.2</version>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <nosuffix>true</nosuffix>
                    <jswarn>false</jswarn>
                    <aggregations>
                        <aggregation>
                            <removeIncluded>true</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/js/head.js</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.form.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.hotkeys.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.popover-1.1.2.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.validate.min.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.validate.ru.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/jquery.style-switcher.js</include>
                                <include>${project.build.directory}/${project.build.finalName}/js/highlight.pack.js</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>true</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/tango/combined.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/fontello-c4f39afe/css/fontello.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/tango/syntax.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/tango/reset-fonts-grids.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/tango/style.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/tango/popover.css</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>true</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/black/combined.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/fontello-c4f39afe/css/fontello.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/black/style.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/black/ir_black.css</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <insertNewLine>true</insertNewLine>
                            <output>${project.build.directory}/${project.build.finalName}/white/combined.css</output>
                            <includes>
