<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="2025091701" author="Maxim Valyanskiy">
    <createTable tableName="email_domains_block">
      <column name="domain" type="text">
        <constraints primaryKey="true"/>
      </column>
      <column name="block_until" type="timestamptz">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="2025091702" author="Maxim Valyanskiy">
    <sql>
      grant select, insert, update on email_domains_block to linuxweb;
    </sql>
  </changeSet>
</databaseChangeLog>
